<div class="container">
  <p>
    <form action="/datasources" method="post">
      <label for="url">What URI would you like to suck?</label><br/>
      <input type="text" name="source[url]" />
      <input type="submit" value="submit" />
    </form>
  </p>

  <h1>Data Sources</h1>
  <p>
    <ul>
      <% if @datasources.each do |s| %>
      <li><a href="/datasources/<%= s.id %>">
          <%= s.title %>
      </a></li>
      <% end.empty? %>
      <li>There are currently no data sources in the source tracker.</li>
      <% end %>
    </ul>
  </p>

  <a href="/">Back to index</a>
</div>
